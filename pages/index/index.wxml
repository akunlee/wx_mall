<!--index.wxml-->
<view class="container">
  <van-search value="{{ value }}" shape="round" placeholder="请输入搜索关键词" />
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="true" autoplay="true" interval="3000">
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
         <img src="{{item}}" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <van-tabbar active-color="#07c160" active="{{ active }}" bind:change="onChange">
    <van-tabbar-item data-page="{{item.page}}" wx:for="{{tab}}" icon="{{item.icon}}">{{item.name}}</van-tabbar-item>
  </van-tabbar>
</view>

