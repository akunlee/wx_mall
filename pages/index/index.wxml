<view class="content">
  <van-search value="" shape="round" placeholder="请输入搜索关键词" />
  <view>
    <swiper indicator-dots="true" autoplay="true" interval="5000">
      <block wx:for="{{background}}" wx:key="*this">
        <swiper-item>
          <image style="width: 100%;" mode="aspectFit" src="{{item}}" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="category">
    <van-row >
      <van-col span="8">中央空调</van-col>
      <van-col span="8">新风系统</van-col>
      <van-col span="8">地暖系统</van-col>
      <van-col span="8">客户案例</van-col>
      <van-col span="8">安装特色</van-col>
      <van-col span="8">关于我们</van-col>
    </van-row>
  </view>

</view>

